<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/usertemplateProfilePic"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerVertical="true"
        android:contentDescription="ProfilePic"
        android:scaleType="fitXY"
        android:src="@drawable/defaultuserprofilepic" />

    <ImageView
        android:id="@+id/SelectUser"
        android:layout_alignParentRight="true"
        android:background="@drawable/darkblackroundedbg"
        android:src="@drawable/ic_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/usertemplateDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blackroundedbg"
        android:visibility="gone"
        android:padding="2dp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/usertemplateUserAge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:textSize="11sp"
        android:visibility="gone"
        android:padding="2dp"
        android:paddingBottom="10dp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/usertemplateUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:textSize="13sp"
        android:ellipsize="end"
        android:gravity="left"
        android:padding="2dp"
        android:background="@drawable/blackroundedbg"
        android:singleLine="true"
        android:text=""
        android:textColor="#ffffff" />
</RelativeLayout>
