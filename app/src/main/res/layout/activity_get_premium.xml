<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gdudes.app.gdudesapp.BillingUtil.GetPremiumActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="35dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/LimitText"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/AllPremiumBenefitsHeading"
            android:layout_below="@+id/LimitText"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="GDudes Premium Benefits"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_below="@+id/AllPremiumBenefitsHeading"
            android:layout_above="@+id/btnGetPremium"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:fadeScrollbars="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/AllPremiumBenefits"
                android:textColor="#BBffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>


        <Button
            android:text="Get GDudes Premium"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:id="@+id/btnGetPremium"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_rounded_button"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/btnClose"
        android:src="@drawable/close"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="28dp"
        android:layout_height="28dp" />
</RelativeLayout>
