<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gdudes.app.gdudesapp.BillingUtil.DonateInfoActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ActivityToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_collapseMode="pin" />
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/BodyBelowAppBar"
        android:layout_below="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/btnDonate"
            android:background="@color/colorSecondary"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:paddingTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="Why donate?"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/WhyDonateAns"
                    android:layout_gravity="center_horizontal"
                    android:text="Our vision is to deliver the best gay dating app.##Aligning to this vision we decided to make __GDudes free of advertisements--.##This reduces our funds but delivers high quality app that users can enjoy without pesky adds.##Your donations can __help us keep running GDudes without ever including adds--."
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="What's in return for me?"
                    android:layout_marginTop="25dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/WhatsinReturnAns"
                    android:layout_gravity="center_horizontal"
                    android:text="We really value users who support us in keeping GDudes add free by their donations.##By donating you would __keep your beloved app add free--.##We would also help you gain attention by __making you more popular in GDudes-- as a thanks for supporting us.##After donation you would also receive a chat message from one of __our team members, who you can contact directly anytime for support--."
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnDonate"
            android:text="Donate"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/login_rounded_button"
            android:textColor="@android:color/white"
            android:layout_width="270dp"
            android:layout_height="30dp" />
    </RelativeLayout>

</RelativeLayout>
