<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    tools:context="com.gdudes.app.gdudesapp.activities.LoginRegister.ForgotPasswordAndReSendVerificationActivity">

    <TextView
        android:id="@+id/ScreenText"
        android:layout_above="@+id/EmailLayout"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/EmailLayout"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/login_rounded_input"
        android:layout_height="36dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="-10dp"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_alignParentBottom="true"
            android:paddingRight="30dp"
            android:hint="Email"
            android:id="@+id/txtEmailID"
            android:textColor="@color/colorPrimary"
            android:inputType="textEmailAddress" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/user_icon"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <Button
            android:text="Send Email"
            android:textAllCaps="false"
            android:id="@+id/btnSendMail"
            android:background="@drawable/login_rounded_button"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </RelativeLayout>

</RelativeLayout>
