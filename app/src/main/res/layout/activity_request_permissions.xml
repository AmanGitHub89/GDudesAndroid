<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:context="com.gdudes.app.gdudesapp.activities.LoginRegister.RequestPermissionsActivity">
    <TextView
        android:id="@+id/title"
        android:layout_above="@+id/description"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="GDudes Requires permissions to continue."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/description"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="GDudes needs File write and Location permissions to work properly.\nPlease grant permission when requested."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnContinue"
        android:layout_below="@+id/description"
        android:text="Continue"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:background="@drawable/login_rounded_button"
        android:textColor="@android:color/white"
        android:layout_width="200dp"
        android:layout_height="30dp" />
</RelativeLayout>